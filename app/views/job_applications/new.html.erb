<section class="content">
  <div class="container">
    <div class="col-md-8 offset-md-2">
      <h4 class="comment-title">APPLYING FOR <%= params[:name].upcase %></h4>
      <%= form_for @job_application do |f| %>
        <div class="form-group">
            <div class="row">
              <div class="col-md-12">
                <div class="field">
                  <%= f.label :description, "Please explain why you think you should get this job." %>
                  <%= f.text_area :description, class: "form-control" %>
                </div>
              </div>

              <div class="col-lg-12">
                <div class="actions" style="padding-top: 2%">
                  <%= f.submit "Apply", class: "site-btn btn-sm centered" %>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</section>
