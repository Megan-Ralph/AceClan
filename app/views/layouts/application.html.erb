<!DOCTYPE html>
<html>
  <head>
    <title>AceClan</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <title>Ace Clan</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,400i,500,500i,700,700i" rel="stylesheet">
  </head>

  <body>
    <header class="header-section" style="top: 0; position: fixed; width: 100%; z-index: 999;">
      <div class="container">
        <%= link_to image_tag("logo.png", :border => 0, :alt => '', :title => ''), root_path, :class => 'site-logo' %>

        <% if user_signed_in? %>
          <button class="site-btn btn-sm" style="float: right;"><%= link_to('Logout', destroy_user_session_path, method: :delete, style: "color: #FFF;") %></button>
        <% else %>
          <button class="site-btn btn-sm" style="float: right;"><%= link_to('Login', new_user_session_path, style: "color: #FFF;") %></button>
        <% end %>
        <div class="nav-switch">
          <i class="fa fa-bars"></i>
        </div>

        <nav class="main-menu">
          <ul>
            <li><%= link_to "Home", main_app.root_path %></li>
            <li><a href="/pages/games">Games</a></li>
            <li><a href="categories.html">Blog</a></li>
            <li><a href="https://forum.aceclan.org/">Forums</a></li>
            <li><a href="contact.html">Contact</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <%= yield %>

    <section class="footer-top-section">
      <div class="container">
        <div class="footer-top-bg">
          <img src="" alt="">
        </div>
        <div class="row">
          <div class="col-lg-4 col-md-6">
            <div class="footer-logo text-white">
              <img src="" alt="">
              <p>Birdy Picture Here</p>
            </div>
          </div>
          <div class="col-lg-4 col-md-6">
            <div class="footer-logo text-white">
              <img src="" alt="">
              <p>Privacy Policy</p>
              <p>Terms and Conditions</p>
              <p>Code of Conduct</p>
            </div>
          </div>
          <div class="col-lg-4 col-md-6">
            <div class="mb-5 mb-md-0">
              <iframe src="https://discordapp.com/widget?id=559697054415323148&theme=dark" width="240" height="412" allowtransparency="true" frameborder="0"></iframe>
            </div>
          </div>
        </div>
      </div>
    </section>


    <footer class="footer-section">
      <div class="container">
        <ul class="footer-menu">
          <li><a href="index.html">Home</a></li>
          <li><a href="review.html">Games</a></li>
          <li><a href="categories.html">Blog</a></li>
          <li><a href="community.html">Forums</a></li>
          <li><a href="contact.html">Contact</a></li>
        </ul>
      </div>
    </footer>

  </body>
</html>
