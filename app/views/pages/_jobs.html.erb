<% if JobListing.where(active: true).any? %>
<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Job Title</th>
      <th scope="col">Status</th>
      <th scope="col">Apply</th>
    </tr>
  </thead>
  <tbody>
    <% JobListing.where(active: true).each do |job| %>
      <tr>
        <td><%= job.name %></td>
        <td>Active</td>
        <td><%= link_to "Apply", new_job_application_path(name: job.name, listing_id: job.id), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
  <h5><i>There are currently no job listings!</i></h5>
<% end %>
