<section class="content">
  <div class="container">
    <div class="col-md-8 offset-md-2">
      <h4 class="comment-title">WELCOME TO TECH SERVICES</h4>

      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Username</th>
            <th scope="col">Date of Birth</th>
            <th scope="col">View</th>
          </tr>
        </thead>
        <tbody>
          <% User.all.each do |u| %>
            <tr>
              <td><%= u.username %></td>
              <td><%= u.dob.strftime("%m/%d/%Y") if u.dob %></td>
              <td><%= link_to "Edit User", edit_user_path(u.id), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
