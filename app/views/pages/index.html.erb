<% if user_signed_in? && @user.visitor? %>
  <%= render "game_application" %>
<% elsif user_signed_in? && @user.approval_pending? %>
    <%= render "non_member_logged_in"%>
<% elsif user_signed_in? && @user.member? %>
  <%= render "member_logged_in" %>
<% else %>
  <%= render "basic_sign_up" %>
<% end %>

<script>
  $(document).ready(function(){
      $(this).scrollTop(0);
  });
</script>
