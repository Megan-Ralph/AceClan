<% if user_signed_in? && @user.enrolled == true && @user.applied != true %>
  <%= render "game_application" %>
<% elsif user_signed_in? && @user.enrolled != true && @user.applied != true %>
    <%= render "non_member_logged_in"%>
<% elsif user_signed_in? && @user.applied == true && @user.enrolled == true %>
  <%= render "member_logged_in" %>
<% else %>
  <%= render "basic_sign_up" %>
<% end %>
