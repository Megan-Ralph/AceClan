<% if user_signed_in? && !Approval.where(user_id: current_user.id).any? && !@user.forum_primary_group_id.present? %>
  <%= render "game_application" %>
<% elsif user_signed_in? && Approval.where(user_id: current_user.id).any? %>
    <%= render "non_member_logged_in"%>
<% elsif user_signed_in? && @user.forum_primary_group_id.present? %>
  <%= render "member_logged_in" %>
<% else %>
  <%= render "basic_sign_up" %>
<% end %>
