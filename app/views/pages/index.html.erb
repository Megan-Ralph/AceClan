<% if user_signed_in? && @user.enrolled == true && @user.applied != true %>
  <%= render "game_application" %>
<% elsif user_signed_in? && @user.enrolled != true && @user.applied != true %>
    <%= render "non_member_logged_in"%>
<% elsif user_signed_in? && @user.applied == true && @user.enrolled == true %>
  <%= render "member_logged_in" %>
<% else %>
  <section class="page-info-section set-bg">
    <div class="pi-content">
      <div class="container">
        <div class="row">
          <div class="col-xl-7 text-white">
            <h2 class="comment-title">Welcome to Ace Clan</h2>
            <p>AceClan.ORG was founded as a Multi-Gaming Military stylised Clan in March 2019 on the basis that everyone deserves a welcome and friendly atmosphere when they play games.</p>
          </div>
        </div>
      </div>
    </div>
    <div class="downArrow bounce">
      <img width="40" height="40" alt="" src="data:image/svg+xml;base64," />
    </div>
  </section>

  <%= render "basic_sign_up" %>
<% end %>
